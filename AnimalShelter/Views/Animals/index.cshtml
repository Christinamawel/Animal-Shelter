@using AnimalShelter.Models

<h1>List of available animals</h1>

@if (@Model.Count == 0)
{
  <h2>No animals currently available</h2>
}
else
{
  <p>@Html.ActionLink("Sort by Longest in Shelter", "Index", new { sortType = 0 })   @Html.ActionLink("Sort by Name", "Index", new { sortType = 1 })   @Html.ActionLink("Sort by Type", "Index", new { sortType = 2 })</p>
  <ul>
    @foreach(Animal animal in Model)
    {
      <li>@Html.ActionLink($"{animal.Name}, {animal.Type}", "Details", new { id = animal.AnimalId})</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new animal", "Create")</p>