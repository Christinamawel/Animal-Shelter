@model AnimalShelter.Models.Animal

<h1>Edit Animal<h1>

<h2>Editing: @Html.DisplayFor(model => model.Name)<h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.AnimalId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)
  @Html.LabelFor(model => model.Type, "Type of animal")
  @Html.EditorFor(model => model.Type)
  @Html.LabelFor(model => model.Breed)
  @Html.EditorFor(model => model.Breed)
  @Html.LabelFor(model => model.Gender)
  @Html.EditorFor(model => model.Gender)
  @Html.LabelFor(model => model.DateOfAdmittance)
  @Html.EditorFor(model => model.DateOfAdmittance, "{0:yyyy-MM-dd}", new {@type = "date"})
  <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to list", "Index")</p>