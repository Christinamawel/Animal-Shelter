@model AnimalShelter.Models.Animal

<h1>Add a new animal<h1>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.Type, "Type of animal")
  @Html.TextBoxFor(model => model.Type)
  @Html.LabelFor(model => model.Breed)
  @Html.TextBoxFor(model => model.Breed)
  @Html.LabelFor(model => model.Gender, "Gender (true = female)")
  @Html.RadioButtonFor(model => model.Gender, true)
  @Html.RadioButtonFor(model => model.Gender, false)
}